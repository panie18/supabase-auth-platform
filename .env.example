# =============================================================
# Supabase Auth Platform - Environment Configuration
# =============================================================
# Kopiere diese Datei zu .env und passe die Werte an.
# Der Installer setzt viele dieser Werte automatisch.

# ─── Deine Domain ────────────────────────────────────────────
DOMAIN=yourdomain.com
AUTH_SUBDOMAIN=auth.yourdomain.com
DASHBOARD_SUBDOMAIN=dashboard.yourdomain.com

# ─── PostgreSQL ───────────────────────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=supabase_auth
POSTGRES_USER=supabase
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_URL=postgres://supabase:CHANGE_ME_STRONG_PASSWORD@postgres:5432/supabase_auth

# ─── GoTrue (Supabase Auth) ──────────────────────────────────
GOTRUE_JWT_SECRET=CHANGE_ME_LONG_RANDOM_SECRET_MIN_32_CHARS
GOTRUE_JWT_EXP=3600
GOTRUE_JWT_DEFAULT_GROUP_NAME=authenticated
GOTRUE_JWT_AUD=authenticated
GOTRUE_OPERATOR_TOKEN=CHANGE_ME_ADMIN_OPERATOR_TOKEN
GOTRUE_DISABLE_SIGNUP=false
GOTRUE_SITE_URL=https://yourdomain.com
GOTRUE_API_EXTERNAL_URL=https://auth.yourdomain.com

# E-Mail (SMTP) für GoTrue
GOTRUE_SMTP_HOST=smtp.gmail.com
GOTRUE_SMTP_PORT=587
GOTRUE_SMTP_USER=your@gmail.com
GOTRUE_SMTP_PASS=your_app_password
GOTRUE_SMTP_ADMIN_EMAIL=admin@yourdomain.com
GOTRUE_MAILER_AUTOCONFIRM=true

# ─── Backend API ──────────────────────────────────────────────
BACKEND_PORT=4000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_DASHBOARD_PASSWORD
ADMIN_JWT_SECRET=CHANGE_ME_ANOTHER_SECRET
GOTRUE_URL=http://gotrue:9999

# ─── Frontend ─────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=https://dashboard.yourdomain.com/api
FRONTEND_PORT=3000

# ─── Cloudflare Tunnel (optional) ────────────────────────────
CLOUDFLARE_TUNNEL_TOKEN=
CLOUDFLARE_TUNNEL_NAME=supabase-auth-tunnel

# ─── Nginx ────────────────────────────────────────────────────
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
CERTBOT_EMAIL=admin@yourdomain.com

# ─── Docker ───────────────────────────────────────────────────
COMPOSE_PROJECT_NAME=supabase-auth
